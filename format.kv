<MainDisplay>
    GridLayout:
        cols: 2
        size: root.width, root.height
        GridLayout:
            rows:2
            size_hint: root.width * 0.82, root.height
            FloatLayout:
                Image:
                    id: gif
                    source: 'breeze.gif'
                    size: root.size
                    allow_stretch: True
                    keep_ratio: False
                    anim_delay: 0.3
                GridLayout:
                    rows:2
                    size: self.width, self.height
                    # Row
                    Label:
                        id: clock_time
                        font_size: 90
                        color: 0,0,0,1

                    # Row
                    GridLayout:
                        cols: 2
                        rows: 1
                        size_hint: (1, 1.8)
                        Image:
                            id: pie
                            source: ''
                            size: root.size
                            allow_stretch: True
                            keep_ratio: True
                        GridLayout:
                            cols: 1
                            rows: 4
                            Label:
                                id: act1
                                text: ""
                            Label:
                                id: act2
                                text: ""
                            Label:
                                id: act3
                                text: ""
                            Label:
                                id: act4
                                text: ""
                            

        GridLayout:
            cols: 1
            rows: 4
            # Row
            size_hint: root.width * 0.18, root.height
            ToggleButton:
                id: but1
                size: self.height, self.height
                pos_hint: {'center_x': .5, 'center_y': .5}
                group: 'act'
                text: ""
                font_size: 16
                background_normal: "comm_off.png"
                background_down: "comm_on.png"
                on_press: root.act("1")

            ToggleButton:
                id: but2
                size: self.height, self.height
                pos_hint: {'center_x': .5, 'center_y': .5}
                group: 'act'
                text: ""
                font_size: 16
                background_normal: "prod_off.png"
                background_down: "prod_on.png"
                on_press: root.act("2")

            # Row
            ToggleButton:
                id: but3
                size: self.height, self.height
                pos_hint: {'center_x': .5, 'center_y': .5}
                group: 'act'
                text: ""
                font_size: 16
                background_normal: "mag_off.png"
                background_down: "mag_on.png"
                on_press: root.act("3")

            ToggleButton:
                id: but4
                size: self.height, self.height
                pos_hint: {'center_x': .5, 'center_y': .5}
                group: 'act'
                text: ""
                font_size: 16
                background_normal: "org_off.png"
                background_down: "org_on.png"
                on_press: root.act("4")

