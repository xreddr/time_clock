<MainDisplay>
    FloatLayout:
        size: root.width, root.height
        id: time_half
        Image:
            id: gif
            source: 'breeze.gif'
            size: root.size
            allow_stretch: True
            keep_ratio: False
            anim_delay: 0.3
        GridLayout:
            cols: 2
            size: root.width, root.height
            GridLayout:
                rows:2
                # Row
                Label:
                    id: clock_time
                    font_size: 90
                    color: 0,0,0,1

                # Row
                Label:
                    id: clock_viz
                    text: "Boring"
                    size_hint: (1, 1.8)

            GridLayout:
                cols: 2
                rows: 2
                # Row
                FloatLayout:                    
                    ToggleButton:
                        size: self.height, self.height
                        size_hint: 0.7, 0.7
                        pos_hint: {'center_x': .5, 'center_y': .5}
                        group: 'act'
                        text: ""
                        background_color: (0,0,0,0) if self.state == 'normal' else (0,0,0,0)
                        background_normal: ""
                        on_press: root.change_gif('clifs.gif', (0,0,0,1))
                        canvas:
                            RoundedRectangle:
                                pos: self.pos
                                size: self.height, self.height
                                source: 'clifs.gif'
                                radius: [180]
                FloatLayout:
                    ToggleButton:
                        size: self.height, self.height
                        size_hint: 0.7, 0.7
                        pos_hint: {'center_x': .45, 'center_y': .5}
                        group: 'act'
                        text: ""
                        background_color: (0,0,0,0) if self.state == 'normal' else (0,0,0,0)
                        background_normal: ""
                        on_press: root.change_gif('palmcar.gif', (1,1,1,1))
                        canvas:
                            RoundedRectangle:
                                pos: self.pos
                                size: self.height, self.height
                                source: 'palmcar.gif'
                                radius: [180]
                # Row
                FloatLayout:
                    ToggleButton:
                        size: self.height, self.height
                        size_hint: 0.7, 0.7
                        pos_hint: {'center_x': .5, 'center_y': .5}
                        group: 'act'
                        text: ""
                        background_color: (0,0,0,0) if self.state == 'normal' else (0,0,0,0)
                        background_normal: ""
                        on_press: root.change_gif('palms.gif', (1,1,1,1))
                        canvas:
                            RoundedRectangle:
                                pos: self.pos
                                size: self.height, self.height
                                source: 'palms.gif'
                                radius: [180]
                FloatLayout:
                    ToggleButton:
                        size: self.height, self.height
                        size_hint: 0.7, 0.7
                        pos_hint: {'center_x': .45, 'center_y': .5}
                        group: 'act'
                        text: ""
                        background_color: (0,0,0,0) if self.state == 'normal' else (0,0,0,0)
                        background_normal: ""
                        on_press: root.change_gif('breeze.gif', (0,0,0,1))
                        canvas:
                            RoundedRectangle:
                                pos: self.pos
                                size: self.height, self.height
                                source: 'breeze.gif'
                                radius: [180]

        
