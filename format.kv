<MainDisplay>
    GridLayout:
        cols: 2
        size: root.width, root.height
        FloatLayout:
            id: time_half
            Image:
                source: 'breeze.gif'
                size: root.size
                allow_stretch: True
                keep_ratio: False
                anim_delay: 0.3

            GridLayout:
                rows:2
                # Row
                Label:
                    id: clock_time
                    font_size: 64
                    color: 0,0,0,1

                # Row
                Label:
                    id: clock_viz
                    text: "Boring"
                    size_hint: (1, 1.8)





        GridLayout:
            cols: 2
            rows: 2
            # Row
            ToggleButton:
                group: 'act'
                text: "Act1"
            ToggleButton:
                group: 'act'
                text: "Act2"
            # Row
            ToggleButton:
                group: 'act'
                text: "Act3"
            ToggleButton:
                group: 'act'
                text: "Act4"
