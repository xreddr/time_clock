<MainDisplay>
    GridLayout:
        cols: 2
        size: root.width, root.height
        FloatLayout:
            id: time_half
            Image:
                id: gif
                source: 'breeze.gif'
                size: root.size
                allow_stretch: True
                keep_ratio: False
                anim_delay: 0.3

            GridLayout:
                rows:2
                # Row
                Label:
                    id: clock_time
                    font_size: 64
                    color: 0,0,0,1

                # Row
                Label:
                    id: clock_viz
                    text: "Boring"
                    size_hint: (1, 1.8)





        GridLayout:
            cols: 2
            rows: 2
            # Row
            ToggleButton:
                group: 'act'
                text: ""
                background_normal: 'clifs.gif'
                on_press: root.change_gif('clifs.gif')

            ToggleButton:
                group: 'act'
                text: ""
                background_normal: 'palmcar.gif'
                on_press: root.change_gif('palmcar.gif')
            # Row
            ToggleButton:
                group: 'act'
                text: ""
                background_normal: 'palms.gif'
                on_press: root.change_gif('palms.gif')
            ToggleButton:
                group: 'act'
                text: ""
                background_normal: 'breeze.gif'
                on_press: root.change_gif('breeze.gif')
